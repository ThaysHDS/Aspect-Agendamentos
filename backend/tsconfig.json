{
  "compilerOptions": {
    /* Linguagem e ambiente */
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    /* Estrutura de pastas */
    "rootDir": "src",
    "outDir": "dist",

    /* Melhorias gerais */
    "forceConsistentCasingInFileNames": true,

    /* Necess√°rio para TypeORM */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

